<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote fetch="https://git.yoctoproject.org/git/" name="yocto" sync-j="4"/>
    <remote fetch="https://code.ossystems.com.br" name="ossystems" sync-j="4" review="code.ossystems.com.br"/>
    <remote fetch="http://git.openembedded.org" name="oe" sync-j="4"/>
    <remote fetch="https://github.com" name="github" sync-j="4"/>

    <default revision="invalidRevision"/>

    <project remote="ossystems" revision="pyro" name="meta-ossystems-base" path="sources/meta-ossystems-base" />
    <project remote="oe" revision="pyro" name="openembedded-core" path="sources/openembedded-core" />
    <project remote="ossystems" revision="pyro" name="ossystems-yocto-base-scripts" path="sources/base" >
        <copyfile dest="setup-environment" src="setup-environment"/>
    </project>
	
    <project remote="github" revision="pyro" name="UpdateHub/updatehub-yocto-project-reference-platform" path="sources/conf/repo"/>

    <project remote="github" revision="pyro" name="UpdateHub/meta-updatehub" path="sources/meta-updatehub"/>
    <project remote="oe" revision="pyro" name="meta-openembedded" path="sources/meta-openembedded" />
	
    <project remote="github" revision="pyro" name="UpdateHub/meta-updatehub-qa" path="sources/meta-updatehub-qa"/>

    <project remote="oe" revision="1.34" name="bitbake" path="sources/bitbake"/>

    <!-- UpdateHub support for Freescale BSP -->
    <project remote="github" revision="pyro" name="Freescale/meta-freescale" path="sources/meta-freescale"/>
    <project remote="github" revision="pyro" name="Freescale/meta-freescale-3rdparty" path="sources/meta-freescale-3rdparty"/>
    <project remote="github" revision="pyro" name="UpdateHub/meta-updatehub-freescale" path="sources/meta-updatehub-freescale"/>

    <!-- UpdateHub support for Raspberry Pi BSP -->
    <project remote="yocto"  revision="pyro" name="meta-raspberrypi" path="sources/meta-raspberrypi"/>
    <project remote="github" revision="pyro" name="UpdateHub/meta-updatehub-raspberrypi" path="sources/meta-updatehub-raspberrypi"/>

</manifest>
