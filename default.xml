<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <remote fetch="https://git.yoctoproject.org/git/" name="yocto" sync-j="4"/>
  <remote fetch="https://code.ossystems.com.br" name="ossystems" sync-j="4" review="code.ossystems.com.br"/>
  <remote fetch="http://git.openembedded.org" name="oe" sync-j="4"/>
  <remote fetch="https://github.com" name="github" sync-j="4"/>

  <default revision="invalidRevision"/>

  <!-- Open Embedded Layers -->
  <project remote="oe" revision="master" name="bitbake" path="sources/bitbake"/>
  <project remote="oe" revision="master" name="openembedded-core" path="sources/openembedded-core" />
  <project remote="oe" revision="master" name="meta-openembedded" path="sources/meta-openembedded" />

  <!-- OS Systems Layers -->
  <project remote="ossystems" revision="master" name="meta-ossystems-base" path="sources/meta-ossystems-base" />
  <project remote="ossystems" revision="master" name="ossystems-yocto-base-scripts" path="sources/base" >
    <copyfile dest="setup-environment" src="setup-environment"/>
  </project>

  <!-- UpdateHub Layers and platform -->
  <project remote="github" revision="master" name="UpdateHub/meta-updatehub" path="sources/meta-updatehub"/>
  <project remote="github" revision="master" name="UpdateHub/meta-updatehub-qa" path="sources/meta-updatehub-qa"/>
  <project remote="github" revision="master" name="UpdateHub/updatehub-yocto-project-reference-platform" path="sources/platform"/>

  <!-- UpdateHub support for Freescale BSP -->
  <project remote="github" revision="master" name="Freescale/meta-freescale" path="sources/meta-freescale"/>
  <project remote="github" revision="master" name="Freescale/meta-freescale-3rdparty" path="sources/meta-freescale-3rdparty"/>
  <project remote="github" revision="master" name="UpdateHub/meta-updatehub-freescale" path="sources/meta-updatehub-freescale"/>

  <!-- UpdateHub support for Raspberry Pi BSP -->
  <project remote="yocto"  revision="master" name="meta-raspberrypi" path="sources/meta-raspberrypi"/>
  <project remote="github" revision="master" name="UpdateHub/meta-updatehub-raspberrypi" path="sources/meta-updatehub-raspberrypi"/>

  <!-- UpdateHub support for Texas Instruments BSP -->
  <project remote="yocto"  revision="master" name="meta-arm" path="sources/meta-arm"/>
  <project remote="yocto"  revision="master" name="meta-ti" path="sources/meta-ti"/>
  <project remote="github" revision="master" name="UpdateHub/meta-updatehub-ti" path="sources/meta-updatehub-ti"/>
</manifest>
